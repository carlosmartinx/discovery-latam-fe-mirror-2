{
  "name": "@discovery-web-app/shared-components",
  "version": "0.1.2",
  "description": "Shared components for DLA",
  "main": "./dist",
  "scripts": {
    "test": "jest --coverage --verbose --color --updateSnapshot",
    "lint": "npx eslint src/",
    "transpile": "babel src --out-dir dist --ignore ./**/*.spec.js,./**/*.stories.js"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    },
    "setupFiles": [
      "./config/setupTests.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs",
          "dynamic-import-node"
        ]
      }
    }
  },
  "dependencies": {
    "@storybook/addon-backgrounds": "^5.0.2",
    "@storybook/addon-knobs": "^5.0.1",
    "lodash": "^4.17.11",
    "react": "^16.8.4",
    "react-slick": "^0.23.2",
    "react-test-renderer": "^16.8.4",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.10.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-to-json": "^3.3.5",
    "jest-styled-components": "^6.3.1",
    "prop-types": "^15.7.2"
  }
}
