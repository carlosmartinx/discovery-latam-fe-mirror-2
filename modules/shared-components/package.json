{
  "name": "@discovery-web-app/shared-components",
  "version": "0.1.1",
  "description": "Shared components for DLA",
  "main": "./dist",
  "scripts": {
    "test": "jest --coverage --verbose --color --updateSnapshot",
    "lint": "npx eslint src/",
    "transpile": "babel src --out-dir dist --ignore ./**/*.spec.js,./**/*.stories.js"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 40,
        "branches": 40,
        "functions": 40,
        "lines": 40
      }
    },
    "setupFiles": [
      "./config/setupTests.js",
      "react-app-polyfill/jsdom"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.stories.ts",
      "!src/**/*.d.ts"
    ],
    "resolver": "jest-pnp-resolver",
    "testMatch": [
      "<rootDir>/src/**/*.spec.js",
      "!<rootDir>/src/**/*.stories.{js,jsx}"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "../../node_modules/babel-jest",
      "^.+\\.css$": "./config/cssTransform.js",
      "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "./config/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "react-app"
    ],
    "plugins": ["babel-plugin-styled-components"],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs",
          "dynamic-import-node"
        ]
      }
    }
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "react": "^16.8.4",
    "react-test-renderer": "^16.8.4"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.10.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-to-json": "^3.3.5",
    "jest-styled-components": "^6.3.1",
    "prop-types": "^15.7.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": "airbnb",
    "plugins": [
      "react"
    ],
    "rules": {
      "linebreak-style": 0,
      "no-named-as-default": 0,
      "no-named-as-default-member": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/prefer-stateless-function": "off"
    }
  },
  "eslintIgnore": [
    "*/serviceWorker.js"
  ]
}
