{
  "babel": {
    "presets": [
      "react-app"
    ],
    "plugins": [
      [
        "react-intl",
        {
          "messagesDir": "./public/messages/"
        }
      ]
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@discovery-web-app/shared-components": "^0.1.1",
    "keymirror-nested": "^1.0.3",
    "lodash": "^4.17.11",
    "react": "^16.8.4",
    "react-app-polyfill": "^0.2.2",
    "react-dev-utils": "^8.0.0",
    "react-dom": "^16.8.4",
    "react-loadable": "^5.5.0",
    "react-intl": "^2.8.0",
    "react-redux": "^6.0.1",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^16.8.4",
    "rebass": "^3.0.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "babel-plugin-react-intl": "^3.0.1",
    "babel-plugin-styled-components": "^1.10.0",
    "enzyme-adapter-react-16": "^1.11.0",
    "jest-styled-components": "^6.3.1",
    "minimist": "^1.2.0",
    "react-intl": "^2.8.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "jest": true
    },
    "extends": "airbnb",
    "plugins": [
      "react"
    ],
    "rules": {
      "linebreak-style": 0,
      "no-named-as-default": 0,
      "no-named-as-default-member": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/prefer-stateless-function": "off"
    }
  },
  "eslintIgnore": [
    "*/serviceWorker.js"
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 40,
        "branches": 40,
        "functions": 40,
        "lines": 40
      }
    },
    "setupFiles": [
      "./config/setupTests.js"
    ]
  },
  "name": "@discovery-web-app/core",
  "private": true,
  "scripts": {
    "build:intl": "node scripts/mergeMessages.js",
    "build:prod": "node scripts/build.js",
    "lint": "npx eslint src/",
    "start": "node scripts/start.js",
    "test": "jest --coverage --verbose --color -u"
  },
  "version": "0.1.0"
}
